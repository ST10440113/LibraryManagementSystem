@model List<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Navigation Tabs -->
<ul class="nav nav-bar mb-4">
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "all" ? "active" : "")" href="/Admin?filter=all">
            All Books (@Model.Count)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "pending" ? "active" : "")" href="/Admin?filter=pending">
            Pending (@ViewBag.PendingCount)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "declined" ? "active" : "")" href="/Admin?filter=declined">
            Declined (@ViewBag.DeclinedCount)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "approved" ? "active" : "")" href="/Admin?filter=approved">
            Accepted (@ViewBag.ApprovedCount)
        </a>
    </li>
</ul>

<!-- Table of Books -->
<div class="card">
    <div class="card-body">
        @if (Model == null || Model.Count < 0)
        {
            <div class="text-muted">No books available.</div>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Book Title</th>
                        <th>Author</th>
                        <th>Submitted by</th>
                        <th>Category</th>
                        <th>Submission Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.SubmittedBy</td>
                            <td>@book.Category</td>
                            <td>@book.SubmittedDate.ToShortDateString()</td>
                            <td>
                                @if (book.Status == LibraryManagementSystem.Models.BookStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (book.Status == LibraryManagementSystem.Models.BookStatus.Approved)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Declined</span>
                                }
                            </td>
                            <td>
                                <a href="/Admin/Review/@book.Id" class="btn btn-primary">
                                    @(book.Status == LibraryManagementSystem.Models.BookStatus.Pending ? "Review" : "View")
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
